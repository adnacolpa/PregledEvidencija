@model PregledEvidencija.Models.InspekcijskoTijelo

@{
    ViewData["Title"] = "Edit";
}
@{
    List<SelectListItem> inspektorati = new List<SelectListItem>();
    inspektorati.Add(new SelectListItem
    {
        Text = "FBiH",
        Value = "FBiH"
    });
    inspektorati.Add(new SelectListItem
    {
        Text = "RS",
        Value = "RS"
    });
    inspektorati.Add(new SelectListItem
    {
        Text = "Disktrikt Brčko",
        Value = "Disktrikt Brčko"
    });
}
@{
    List<SelectListItem> nadleznosti = new List<SelectListItem>();
    nadleznosti.Add(new SelectListItem
    {
        Text = "Tržišna inspekcija",
        Value = "Tržišna inspekcija"
    });
    nadleznosti.Add(new SelectListItem
    {
        Text = "Zdravstveno - sanitarna inspekcija",
        Value = "Zdravstveno - sanitarna inspekcija"
    });
}
<h1>Edit</h1>

<h4>InspekcijskoTijelo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inspektorat" class="control-label"></label>
                @Html.DropDownList("Inspektorat", inspektorati, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Nadleznost" class="control-label"></label>
                @Html.DropDownList("Nadleznost", nadleznosti, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="KontaktOsoba" class="control-label"></label>
                <input asp-for="KontaktOsoba" class="form-control" />
                <span asp-validation-for="KontaktOsoba" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
