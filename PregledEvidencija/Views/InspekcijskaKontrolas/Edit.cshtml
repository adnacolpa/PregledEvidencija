@model PregledEvidencija.ViewModels.InspekcijskaKontrolaViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>InspekcijskaKontrola</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="DatumKontrole" class="control-label"></label>
                @Html.TextBoxFor(model => model.DatumKontrole, new { htmlAttributes = new { @class = "form-control date-picker" } })
                <span asp-validation-for="DatumKontrole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RezultatiKontrole" class="control-label"></label>
                <input asp-for="RezultatiKontrole" class="form-control" />
                <span asp-validation-for="RezultatiKontrole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProizvodID" class="control-label"></label>
                @Html.DropDownList("ProizvodID", Model.ProizvodList,
    "Izaberite proizvod",
    new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="NadleznoTijeloID" class="control-label"></label>
                @Html.DropDownList("NadleznoTijeloID", Model.TijeloList,
    "Izaberite nadležno tijelo",
    new { @class = "form-control" })
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ProizvodSiguran" /> @Html.DisplayNameFor(model => model.ProizvodSiguran)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $("#DatumKontrole").datetimepicker
                ({
                    dateFormat: "dd.mm.yy.",
                    timeFormat:"HH:mm:ss",
                    timePicker: true,
                    minDate: -20, maxDate: "+0M +0D"
                })

        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
